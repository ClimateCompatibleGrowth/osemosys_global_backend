# Auto-generated config for run <%= @run.id %>

# High Level Configuration
inputDir: 'resources'
outputDir: 'results'
modelName: 'BBIN'
region: 'GLOBAL'
slug: '<%= @run.slug %>'

# Scenario Name
scenario: <%= @run.slug %>

# Temporal Parameters
startYear: <%= @run.start_year %>
endYear: <%= @run.end_year %>
daytype: False
dayparts:
  #daypart : [start_hour (inclusive), end_hour (exclusive)]
  <% @run.day_parts.each do |day_part| %>
    <%= day_part['id'] %>: <%= [day_part['start_hour'], day_part['end_hour']] %>
  <% end %>

seasons:
  #season : [month 1, month 2, ...] (all inclusive)
  <% @run.seasons.each do |season| %>
    <%= season['id'] %>: <%= season['months'] %>
  <% end %>

# Spatial Parameters
geographic_scope:
  <% @run.geographic_scope.each do |scope_slug| %>
    - '<%= scope_slug %>'
  <% end %>

crossborderTrade: True

# Emission Parameters
emission_penalty: 100 # M$/MT CO2

# Investment Parameters
no_invest_technologies:
  - 'GEO'
  - 'CSP'
  - 'WAV'
  - 'BIO'
  - 'URN'

# Result Parameters
results_by_country: True

<% if !@disable_interconnector %>
user_defined_capacity:
  #technology: [capacity, first_year, lifetime]
  <%= @run.user_defined_technology_name %>: [<%= @run.capacity %>, <%= @run.start_year %>, <%= @run.lifetime %>]
<% end %>
