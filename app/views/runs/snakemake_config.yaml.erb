# Auto-generated config for run <%= @run.id %>

# High Level Configuration
inputDir: 'resources'
outputDir: 'results'
modelName: 'OsemosysGlobal'
region: 'GLOBAL'

# Scenario Name
scenario: <%= @run.slug %>

# Temporal Parameters
startYear: <%= @run.start_year %>
endYear: <%= @run.end_year %>
daytype: False
dayparts:
  #daypart : [start_hour (inclusive), end_hour (exclusive)]
  <% @run.day_parts.each do |day_part| %>
    <%= day_part['id'] %>: <%= [day_part['start_hour'], day_part['end_hour']] %>
  <% end %>
seasons:
  #season : [month 1, month 2, ...] (all inclusive)
  <% @run.seasons.each do |season| %>
    <%= season['id'] %>: <%= season['months'] %>
  <% end %>

# Spatial Parameters
geographic_scope:
  - '<%= @run.node1 %>'
  - '<%= @run.node2 %>'
crossborderTrade: False

# Emission Parameters
emission_penalty: 50 # M$/MT CO2

# Result Parameters
results_by_country: True
